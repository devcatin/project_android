<?xml version="1.0" encoding="utf-8"?>
                                                                    

    
                                                                    
                                                
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"  android:tag="layout/list_item_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <com.erik.android.androidlean.view.CustomRoundAngleImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:tag="binding_1"       />

        <LinearLayout
            android:id="@+id/rl_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_head"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_2"         />

            <TextView
                android:id="@+id/txt_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_3"         />

        </LinearLayout>

    </RelativeLayout>

         

